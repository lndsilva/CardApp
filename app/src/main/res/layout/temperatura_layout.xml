<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".TemperaturaActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/idCardAssam"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#673AB7">

            <TextView
                android:id="@+id/txtAssam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginTop="30sp"
                android:text="@string/assam"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCurrLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtAssam"
                android:layout_marginStart="30sp"
                android:text="@string/current_location"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtCurrLocation"
                android:layout_marginStart="30sp"
                android:text="@string/_25"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgArrowAssam"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/txtTemp"
                android:layout_marginStart="70dp"
                android:contentDescription="@string/seta"
                android:src="@drawable/baseline_arrow_forward" />

            <TextView
                android:id="@+id/txtPorc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCurrLocation"
                android:layout_marginStart="90dp"
                android:layout_marginTop="12sp"
                android:text="@string/_18"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/imgCloudAssam"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/txtAssam"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:contentDescription="@string/nuvem"
                android:src="@drawable/baseline_cloud" />

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgCloudAssam"
                android:layout_alignEnd="@+id/imgCloudAssam"
                android:layout_marginStart="90dp"
                android:layout_marginTop="12sp"
                android:text="@string/_11_25_am"
                android:textColor="#FFF"
                android:textSize="12sp"
                android:textStyle="normal" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

